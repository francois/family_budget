<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title><%= page_title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag(jquery_files, "application") %>
    <!--[if lt IE 7]><script src="http://ie7-js.googlecode.com/svn/version/2.0(beta3)/IE7.js" type="text/javascript"></script><![endif]-->
    <!--[if lt IE 8]><script src="http://ie7-js.googlecode.com/svn/version/2.0(beta3)/IE8.js" type="text/javascript"></script><![endif]--></head>
  <body id="<%= controller.controller_name %>" class="<%= body_classes %>">
    <div id="wrapper">
      <div id="head">
        <ul id="secnav" class="navigation">
          <% if logged_in? then %>
            <li id="nav-people"><%=  link_to "Ma Famille", people_path %></li>
            <li id="nav-signout"><%= link_to "Déconnection", session_path, :method => :delete %></li>
          <% else %>
            <li id="nav-signup"><%=  link_to "Inscription", new_person_path %></li>
            <li id="nav-signin"><%=  link_to "Connection", new_session_path %></li>
          <% end %>
        </ul>
        <% if logged_in? then %>
          <ul id="mainnav" class="navigation">
            <li id="nav-dashboards"><%=        link_to "Graphiques",     root_path %></li>
            <li id="nav-imports"><%=           link_to "Importer",       new_import_path(:protocol => protocol) %></li>
            <li id="nav-budgets"><%=           link_to "Budgets",        budget_path %></li>
            <li id="nav-bank_transactions"><%= link_to "Transactions",   bank_transactions_path %></li>
            <li id="nav-transfers"><%=         link_to "Transferts",     transfers_path %></li>
            <li id="nav-accounts"><%=          link_to "Comptes",        accounts_path %></li>
            <li id="nav-bank_accounts"><%=     link_to "Comptes Banque", bank_accounts_path %></li>
          </ul>
        <% end %>
        <h1>NotreBudget.com</h1>
      </div>
      <div id="content">
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
        <h2><%=h @page_title %></h2>
        <div id="flash">
          <%= render_flash_messages %>
        </div>
        <%= yield %>
      </div>
      <div id="footer">
        <p>Copyright 2008-<%= Date.today.year %>, Solutions Technologiques Internationales.</p>
        <p>Tous droits réservés.</p>
      </div>
    </div>
  </body>
</html>
