<table class="budget">
  <col width="*2"/>
  <col span="6" width="*1"/>
  <thead>
    <tr>
      <th rowspan="2"><%=h name %></th>
      <%= render :partial => "budget_head", :collection => periods %>
    </tr>
    <tr>
      <%- 3.times do -%>
        <th class="budget">Budgété</th>
        <th class="real">Réel</th>
      <%- end -%>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td>&nbsp;</td>
      <%= render :partial => "total", :collection => periods, :locals => {:accounts => accounts} %>
    </tr>
  </tfoot>
  <tbody>
    <%= render :partial => "account", :collection => accounts, :locals => {:periods => periods} %>
  </tbody>
</table>
