<h1>New account</h1>

<%= error_messages_for :account %>

<% form_for(@account) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Purpose</b><br />
    <%= f.text_field :purpose %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', accounts_path %>
