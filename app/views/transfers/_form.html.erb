<%= error_messages_for :transfer, :object => transfer %>

<% fields_for(:transfer, transfer) do |f| %>
<p>
  <label for="transfer_posted_on">En date du</label><br />
  <%= f.date_select :posted_on %>
</p>

<p>
  <label for="transfer_debit_account_id">Débiter</label><br/>
  <%= f.collection_select :debit_account_id, accounts, :id, :name %>
</p>

<p>
  <label for="transfer_credit_account_id">Créditer</label><br/>
  <%= f.collection_select :credit_account_id, accounts, :id, :name %>
</p>

<p>
  <label for="transfer_amount">Montant</label><br/>
  <%= f.text_field :amount, :value => amount(transfer.amount) %>
</p>

<p>
  <label for="transfer_description">Description</label><br />
  <%= f.text_field :description %>
</p>
<% end -%>
