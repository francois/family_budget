<% form_tag 'http://whatdoesthiserrormean.com/search', :name => 'wdtem', :method => :get do -%>
  <%= hidden_field_tag 'q', @exception.class.to_s + ' ' + @exception.clean_message %>
  <h1>
    <%=h @exception.class.to_s %>
    <% if request.parameters['controller'] %>
      in <%=h request.parameters['controller'].humanize %>Controller<% if request.parameters['action'] %>#<%=h request.parameters['action'] %><% end %>
    <% end %>
  </h1>
  <pre><%=h @exception.clean_message %></pre>
  <a href="javascript: document.forms['wdtem'].submit();"><%= image_tag('http://whatdoesthiserrormean.com/images/logo_for_error_page.gif', :border => '0', :alt => "If you can't see this image, whatdoesthiserrormean.com is probably down.") %></a>
<% end -%>

